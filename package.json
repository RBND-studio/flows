{
  "name": "@flows/monorepo",
  "description": "Flows monorepo",
  "private": true,
  "scripts": {
    "e2e": "pnpm --filter e2e",
    "js": "pnpm --filter js",
    "tsc": "pnpm -r tsc",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "commitlint": "commitlint --edit",
    "pre-push": "concurrently \"pnpm lint\" \"pnpm test\" \"pnpm tsc\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@vercel/style-guide": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "prettier": "^3.3.0"
  }
}
